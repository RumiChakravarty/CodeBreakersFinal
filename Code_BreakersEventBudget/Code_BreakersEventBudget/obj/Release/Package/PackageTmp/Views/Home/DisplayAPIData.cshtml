@{
    ViewBag.Title = "DisplayAPIData";
}
@Html.ActionLink("Back to Continue Shopping", "ContinueShopping", new { id = ViewBag.ListID })

<h3>Display the Items</h3>
<img src="~/Scripts/image/slack_for_ios_upload.png" style="width:300px; float:right" />

<div>
    <hr />
    <table border="1">
        <tr>
            <th>ListID</th>
            <th>UserID</th>
            <th>ItemName</th>
            <th>Price</th>
            <th>Thumbnnail URL</th>

            <th>Actions</th>
        </tr>
        @foreach (ListItem listItem in ViewBag.listItems)
        {
            <tr>
                <td>@listItem.ListID</td>
                <td>@listItem.UserID</td>
                <td>@listItem.ProductName</td>
                <td>$@listItem.Price</td>
                <td><img src="@listItem.ThumbnailUrl" /></td>
                <td>@using (Html.BeginForm("AddAPIValueToList", "Home", new {Product = listItem.ProductName, Price = listItem.Price , ListId= listItem.ListID, UserId= listItem.UserID, ThumbnailUrl = listItem.ThumbnailUrl, GiftFor = listItem.GiftFor}))
                {
                <input type="submit" value="Add to List" />}*
               </td>
            </tr>
        }
    </table>
</div>